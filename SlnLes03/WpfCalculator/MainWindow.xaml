        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn1" Content="1" HorizontalAlignment="Left" Margin="167,122,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn1_Click"/>
