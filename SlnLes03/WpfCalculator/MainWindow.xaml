        <Button x:Name="btn3" Content="3" HorizontalAlignment="Left" Margin="327,122,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn3_Click"/>
        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" Margin="167,192,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn4_Click"/>
        <Button x:Name="btn5" Content="5" HorizontalAlignment="Left" Margin="247,192,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn5_Click"/>
        <Button x:Name="btn6" Content="6" HorizontalAlignment="Left" Margin="327,192,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn6_Click"/>
        <Button x:Name="btn7" Content="7" HorizontalAlignment="Left" Margin="167,261,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn7_Click"/>
        <Button x:Name="btn8" Content="8" HorizontalAlignment="Left" Margin="247,261,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn8_Click"/>
        <Button x:Name="btn9" Content="9" HorizontalAlignment="Left" Margin="327,261,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn9_Click"/>
        <Button x:Name="btn0" Content="0" HorizontalAlignment="Left" Margin="247,331,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btn0_Click"/>
        <Button x:Name="btnPlus" Content="+" HorizontalAlignment="Left" Margin="407,122,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btnPlus_Click"/>
        <Button x:Name="btnMin" Content="-" HorizontalAlignment="Left" Margin="407,192,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btnMin_Click"/>
        <Button x:Name="btnMaal" Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="407,261,0,0" Height="50" Click="btnMaal_Click"/>
        <Button x:Name="btnDeel" Content="/" HorizontalAlignment="Left" Margin="407,331,0,0" VerticalAlignment="Top" Width="50" Height="50" Click="btnDeel_Click"/>
        <Button x:Name="btnSqr" Content="SQR" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="487,122,0,0" Height="50" Click="btnSqr_Click"/>
