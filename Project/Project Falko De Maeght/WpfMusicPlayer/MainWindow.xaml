<Window x:Class="WpfMusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMusicPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="ltbSongs" HorizontalAlignment="Left" Height="133" Margin="26,23,0,0" VerticalAlignment="Top" Width="384" MouseDoubleClick="ltbSongs_MouseDoubleClick">
            <ListBoxItem x:Name="ltbTest" Content="c:/users/falko/music/Aaron Smith - Dancin.mp3"/>
            <ListBoxItem Content="c:/users/falko/music/TLC - No Scrubs.mp3"/>
            <ListBoxItem Content="c:/users/falko/music/JJ Grey &amp; Mofro - The Sun Is Shining Down.mp3"/>
        </ListBox>
        <TextBox x:Name="txtArtist" HorizontalAlignment="Left" Height="23" Margin="26,161,0,0" TextWrapping="Wrap" Text="Bestandslocatie ingeven" VerticalAlignment="Top" Width="309"/>
        <Button x:Name="btnAdd" Content="Add Song" HorizontalAlignment="Left" Margin="335,161,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="Button_Click"/>
        <Button x:Name="btnPausePlay" Content="Pause" HorizontalAlignment="Left" Margin="255,191,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="335,191,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="btnNext" Content="Next" HorizontalAlignment="Left" Margin="175,191,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="btnPrevious" Content="Previous" HorizontalAlignment="Left" Margin="95,191,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
